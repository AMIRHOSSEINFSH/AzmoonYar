<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginVertical="8dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:tint="@color/black"
                app:srcCompat="@drawable/ic_baseline_check_circle_outline_24"
                android:id="@+id/examIsPassed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:hint="Time of Exam"
                android:layout_weight="1"
                android:id="@+id/ExamTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingBottom="12dp"
                android:hint="Date of Exam"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/DateExam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:gravity="end"
            android:hint="Description"
            android:id="@+id/ExamDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>




</com.google.android.material.card.MaterialCardView>